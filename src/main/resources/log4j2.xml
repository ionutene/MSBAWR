<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <!--immediateFlush="false" -->
<!--        <RollingFile name="RollingFile" fileName="${log-path}/myexample.log"
                     filePattern="${log-path}/myexample-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="1 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="4"/>
        </RollingFile>-->
        <!--${sys:tomcat_webroot}/-->
        <File name="MyFile" fileName="msbarwr.log" append="false">
            <!--<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} %-5level - %msg%n"/>
        </File>
        <File name="MyDebugFile" fileName="DEBUG_msbarwr.log" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <!--Ignore any messages from the internal logger of HttpClient-->
        <!--<logger name="org.apache.http" level="error" />-->
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="MyFile"/>
            <AppenderRef ref="MyDebugFile"/>
        </Root>
    </Loggers>
</Configuration>